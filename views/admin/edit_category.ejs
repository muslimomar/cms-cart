<%- include('../_layouts/adminheader') %>

<h2 class="page-title" style="margin-top:30px;">Edit a category</h2>
<a href="/admin/categories" class="btn btn-primary">Back to all categories</a>
<br><br>

<form method="post" action="/admin/categories/edit-category/<%= id %>">

  <div class="form-group">
    <label for="">Title</label>
    <input type="text" name="title" value="<%= title%>" placeholder="Title" class="form-control">
  </div>

  <button name="button" class="btn btn-default">Submit</button>

</form>

<%- include('../_layouts/adminfooter') %>
